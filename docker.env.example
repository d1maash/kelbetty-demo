# Docker Compose Environment Variables
# Скопируйте этот файл в .env для локальной разработки

# Database
DATABASE_URL=postgresql://kelbetty:kelbetty@db:5432/kelbetty
POSTGRES_USER=kelbetty
POSTGRES_PASSWORD=kelbetty
POSTGRES_DB=kelbetty

# Next.js
NEXTAUTH_SECRET=your-secret-key-here-change-in-production
NEXTAUTH_URL=http://localhost:3000
NODE_ENV=production

# LibreOffice
DISPLAY=:99
LIBREOFFICE_HOME=/tmp/libreoffice
LIBREOFFICE_TIMEOUT=30000

# OnlyOffice
ONLYOFFICE_ENABLED=true
ONLYOFFICE_URL=http://documentserver:80
ONLYOFFICE_SECRET=your-onlyoffice-secret-here

# Clerk Authentication (если используется)
CLERK_PUBLISHABLE_KEY=your-clerk-publishable-key
CLERK_SECRET_KEY=your-clerk-secret-key

# Gemini AI (если используется)
GEMINI_API_KEY=your-gemini-api-key

# Storage
STORAGE_PATH=/tmp/assets
CONVERT_PATH=/tmp/convert
