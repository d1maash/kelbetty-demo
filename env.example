# Kelbetty Environment Variables

# Database
DATABASE_URL="postgresql://kelbetty:kelbetty@localhost:5432/kelbetty"

# Next.js
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
NODE_ENV="development"

# LibreOffice Integration
DISPLAY=":99"
LIBREOFFICE_HOME="/tmp/libreoffice"
LIBREOFFICE_TIMEOUT="30000"

# DOCX Import Modes
NEXT_PUBLIC_DOCX_IMPORT_MODE="libreoffice" # libreoffice | jsDocxToHtml | legacy

# OnlyOffice
ONLYOFFICE_ENABLED="true"
ONLYOFFICE_URL="http://localhost:8082"
ONLYOFFICE_SECRET="your-onlyoffice-secret-here"

# Clerk Authentication
CLERK_PUBLISHABLE_KEY="your-clerk-publishable-key"
CLERK_SECRET_KEY="your-clerk-secret-key"

# Gemini AI
GEMINI_API_KEY="your-gemini-api-key"

# Storage
STORAGE_PATH="/tmp/assets"
CONVERT_PATH="/tmp/convert"